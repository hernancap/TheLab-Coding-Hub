{
  "compilerOptions": {
    "target": "es2017",                    
    "module": "ESNext", 
    "moduleResolution": "node",
    "esModuleInterop": true,                
    "skipLibCheck": true,                  
    "strict": true,                        
    "outDir": "./dist",                    
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
  },
  "exclude": [
    "node_modules"
  ]
}
